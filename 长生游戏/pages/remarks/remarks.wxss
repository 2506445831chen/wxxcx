@import '/utils/style.wxss';

.content {
  width: 100%;
  height: 332rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 40rpx 20rpx rgba(0, 0, 0, 0.05);
}

.box {
  position: relative;
  box-sizing: border-box;
  padding: 26rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  color: rgba(202, 202, 202, 1);
  border: 2rpx solid#E5E5E5;
  width: 686rpx;
  height: 236rpx;
}

.count {
  position: absolute;
  bottom: 28rpx;
  right: 26rpx;
  font-size: 24rpx;
  color: #e5e5e5;
}

.body {
  width: 100%;
  height: 100vh;
  background: #fafafa;
}

.button {
  margin-top: 48rpx;
  margin-left: 34rpx;
  width: 686rpx;
  height: 90epx;
  font-size: 34rpx;
  line-height: 90rpx;
  background: #edc954;
  color: #fff;
  text-align: center;
}
