.payshow{
  width: 100%;
  height: 176rpx;
  background: #FFFFFF;
  padding: 0 32rpx;
  box-sizing: border-box;
  box-shadow: 0  2px 10px #EAEAEA;
}
.icon{
  padding-top:40rpx; 
  font-family: PingFang-SC-Bold;
  font-size: 36rpx;
  color: #8A8A8A;
  line-height: 50rpx;
}
.icon-right-1{
  font-size: 50rpx;
  color:#6ad580;
  margin-right:50rpx; 
}
.word{
  width: 100%;
  padding-left: 100rpx;
  font-size: 28rpx;
  color: #CACACA;
}

/* 开始 */
.boxorder{
  margin-top: 76rpx;
  width: 100%;
  background: #FFFFFF;
  box-shadow: 0  2px 10px #EAEAEA;
  padding:0 32rpx;
  box-sizing: border-box; 
}
.choosebox{
  width: 100%;
  height: 308rpx;
  display: flex;
  padding-top: 46rpx;
  box-sizing: border-box;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.timebox{
  width: 124rpx;
  height: 124rpx;
  line-height: 124rpx;
  text-align: center;
  border: 6rpx solid#EFD47C;
  border-radius: 50%;  
}
.button{
width: 100%;
height: 90rpx;
display: flex;
justify-content: space-between;
}
.box{
width: 328rpx;
height: 90rpx;
border-radius:6rpx; 
font-size:34rpx;
color: #EFD47C; 
line-height: 90rpx;
text-align: center;
border: 2rpx solid#EFD47C;
}
.box.active{
  background: #EFD47C;
  color: #ffffff;
}
.shopname{
  width: 100%;
  height: 94rpx;
 font-size: 32rpx;
 line-height: 94rpx;
 color:#585858;
 border-bottom:2rpx solid #F7F7F7;
}
.orderinformation{
 width: 100%;
 height: 72rpx;
 font-size: 30rpx;
 color: #585858;
 display: flex;
 justify-content: space-between;
 align-items: center;
}
.share{
 font-size: 30rpx;
 color: #CACACA;
}
.price{
  font-size: 26rpx;
  color: #CACACA;
}
.count{
  width: 100%;
  height: 94rpx;
  font-size: 30rpx;
  color: #585858;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom:2rpx solid #F7F7F7;
  border-top: 2rpx solid #F7F7F7;
}
.num{
  font-size: 26rpx;
  color: #CACACA;
}
.paycount{
  width: 100%;
  height: 94rpx;
  font-size: 30rpx;
  color: #585858;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
