.curtain{
  width: 100%;
  height: 100%;
  position: fixed;
  top:0;
  left:0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}
.box{
  position: relative;
  padding-left:2rpx; 
  width: 636rpx;
  height: 666rpx;
  border-radius: 6rpx;
  background: #FFFFFF;
}
.box-top{
  width: 100%;
  height: 132rpx;
}
.title{
  float: left;
  margin-left:214rpx;
  padding-top: 48rpx;
 font-size: 36rpx;
 color: #585858;
}
.close{
 width: 34rpx;
 height: 34rpx;
 float: right;
 font-size: 34rpx;
 color: #8D8D8D;
 margin-right:24rpx;
 margin-top: 48rpx;
}
.center{
  width: 100%;
  height: 322rpx;
}
.flavor{
width: 100%;
height:30rpx;
padding-left:26rpx; 
font-size:30rpx; 
color: #8D8D8D;
line-height: 30rpx;
}
.taste{
width: 100%;
height: 250rpx;
}
.taste-box{
  float: left;
width: 170rpx;
height: 80rpx;
margin-top: 34rpx;
margin-left:22rpx; 
text-align: center;
line-height: 80rpx;
border-radius: 6rpx;
border: 4rpx solid#EFD47C;
font-size: 30rpx;
color: #EFD47C;
}

.taste-box.active{
  background: #EFD47C;
  color:#FFFFFF;
}
.statistics{
  width: 100%;
  height: 42rpx;
  margin-top: 17rpx;
  padding-right:24rpx;  
}
.price{
  margin-left:24rpx; 
  font-size: 15rpx;
  font-weight: Bold;
  color: #FF3E4D;
  float: left;
}
.price .number{
  display: inline;
  font-size: 22rpx;
  font-weight: Bold;
  color: #FF3E4D;
}
.span{
  display: inline; 
  font-size:24rpx;
  font-weight: Medium;
  color: #B8B8B8; 
}
.count{
float: right;
display: flex;
}
.reduce{
 width: 42rpx;
 height: 42rpx;
 font-size: 42rpx;
line-height: 42rpx;
text-align: center;
color: #EDC954;
}
input{
 width:50rpx; 
}
.add{
 width: 42rpx;
 height: 42rpx;
 line-height: 42rpx;
 font-size: 42rpx;
text-align: center;
color: #EDC954;
}
.button{
  width: 588rpx;
  height: 90rpx;
  border-radius:6rpx;
  background: #EDC954; 
  font-size: 34rpx;
  color: #FFFFFF;
  line-height: 90rpx;
  text-align: center;
  position: absolute;
  left:24rpx;
  bottom: 24rpx; 
}