@import '/utils/style.wxss';

.body {
  width: 100%;
  height: 1202rpx;
  background: #fafafa;
}
.search{
    width: 100%;
    height: 2.6rem;
    display: flex;
    align-items: center;
    justify-content: space-around;
}
.box {
    width: 600rpx;
    height: 80rpx;
    border-radius: 40rpx;
    display: flex;
    border: 2rpx solid#000000;
    align-items: center;
    justify-content: space-around;
}
.button{
    width: 100rpx;
    height: 80rpx;
    font-size: 20rpx;
    outline: none;
    border-radius: 25rpx;
    border: 2rpx solid#000;
    display: flex;
    align-items: center;
    justify-content: center;
}
.input {
    width: 560rem;
    height: 100%;
    font-size: 24rpx;
    color: #8d8d8d;
    line-height:80rpx;
    border-top-right-radius:40rpx;
    border-bottom-right-radius: 40rpx; 
    border: 0;
    outline: none;
    background: #fafafa;
    z-index:0;
}
.icon-sousuo {
  padding-left:10rpx;
  line-height: 80rpx;
  font-size: 48rpx;
  color: #8d8d8d;
}

.icon-guanbi {
  font-size: 30rpx;
  color: #8d8d8d;
  line-height: 80rpx;
  padding-right:20rpx; 
}
.heat{
    box-sizing: border-box;
  width: 100%;
  height: 92rpx;
  font-size: 32rpx;
  color: #CACACA;
  padding-left: 32rpx;
  line-height: 92rpx;
}
.list {
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  padding-left: 32rpx;
  box-shadow: 0 2px 10px #eaeaea;
}
.li {
  width: 686rpx;
  height: 92rpx;
  font-size: 30rpx;
  color: #8d8d8d;
  line-height: 92rpx;
  border-bottom: 2rpx solid#F7F7F7;
}
noshop{
  position: fixed;
  width: 100%;
  top: 270rpx;
  left: 0;
}
