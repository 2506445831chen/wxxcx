@import '/utils/style.wxss';
.content{
  box-sizing: border-box;
  width: 100%;
  height: 584rpx;
  display: flex;
  padding: 0 32rpx;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0  2px 10px #EAEAEA;
}
.image{
width: 420rpx;
height: 394rpx;
}
.image image{
  width: 100%;
  height: 100%;
}
.information{
 width: 100%;
 height: 116rpx;
}
.h1 {
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  font-size: 30rpx;
  color: #585858;
}

.p {
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  font-size: 20rpx;
  color: #cacaca;
}

.p2 {
  font-family: PingFang-SC-Medium;
  font-weight: Medium;
  margin-top: 16rpx;
  font-size: 20rpx;
  color: #cacaca;
}
.count-box{
width: 100%;
height: 74rpx;
display: flex;
justify-content: space-between;
align-items: center;
}
.price {
  display: flex;
  font-size: 20rpx;
  color: #ff3e4d;
}

.price .span {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  font-size: 24rpx;
  color: #ff3e4d;
}
.box-icon{
 display: flex;
 padding-bottom:32rpx; 
}
.iconfont.icon-jianhao{
  width: 42rpx;
  height: 42rpx;
  font-size: 42rpx;
  color: #EFD47C;
}
.num{
  width: 38rpx;
  font-size: 38rpx;
  color: #000;
  text-align: center;
}
 .iconfont.icon-jiahao {
  width: 42rpx;
  height: 42rpx;
  font-size: 42rpx;
  color: #EFD47C;
 
}

